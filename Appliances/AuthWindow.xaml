<Window x:Class="Appliances.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Appliances"
        mc:Ignorable="d"
        Title="AuthWindow" Height="700" Width="600">
    <Grid>
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="0,410,0,0" Text="" VerticalAlignment="Top" FontSize="20" Width="352" Height="38"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Center" Margin="0,487,0,0" VerticalAlignment="Top" FontSize="20" Width="352" Height="39"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="124,384,0,0" VerticalAlignment="Top" FontSize="14" Width="132"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="124,458,0,0" VerticalAlignment="Top" FontSize="14" Width="132"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,572,0,0" VerticalAlignment="Top" Height="40" FontSize="20" Width="238" Click="Button_Click"/>
    </Grid>
</Window>
